<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background_material_dark">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imgvTrailer"
        android:src="@drawable/abc_ic_go_search_api_mtrl_alpha"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtvTrailerName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvTrailerName"
        android:layout_gravity="right"
        android:textColor="@color/text_color"
        android:padding="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imgvTrailer"
        android:textSize="@dimen/size_trailer_title" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/txtvTrailerName"
        android:layout_alignParentEnd="false"
        android:baselineAligned="true"
        android:textAlignment="gravity"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtvTrailerSize"
            android:layout_gravity="right"
            android:textColor="@color/text_color"
            android:padding="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="@dimen/size_trailer_details"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/separator"
            android:id="@+id/tvSeparator"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtvTrailerSite"
            android:layout_gravity="right"
            android:textColor="@color/text_color"
            android:padding="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="@dimen/size_trailer_details"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvTrailerIdiom"
        android:layout_gravity="right"
        android:textColor="@color/text_color"
        android:padding="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/linearLayout"
        android:textSize="@dimen/size_trailer_details_idiom"
        android:layout_alignParentEnd="false"
        android:gravity="left" />

</RelativeLayout>
